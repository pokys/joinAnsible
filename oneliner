powershell -NoProfile -ExecutionPolicy Bypass -Command "& { [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; $url = 'https://raw.githubusercontent.com/ansible/ansible-documentation/devel/examples/scripts/ConfigureRemotingForAnsible.ps1'; $file = Join-Path $env:TEMP 'ConfigureRemotingForAnsible.ps1'; (New-Object System.Net.WebClient).DownloadFile($url, $file); . $file -SkipNetworkProfileCheck; $Username = 'ansible'; $Password = ConvertTo-SecureString 'Ansiblehelper' -AsPlainText -Force; New-LocalUser -Name $Username -Password $Password -Description 'Účet pro Ansible správu' -PasswordNeverExpires; Add-LocalGroupMember -Group 'Administrators' -Member $Username; Write-Host 'Systém je připraven na správu přes Ansible a účet ansible byl vytvořen.' }"
